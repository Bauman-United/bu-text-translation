# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram Channel ID where comments will be posted
# To get channel ID:
# 1. Add @RawDataBot to your channel
# 2. It will show you the channel ID (usually starts with -100)
TELEGRAM_CHANNEL_ID=your_telegram_channel_id_here

# VK Access Token (optional but recommended)
# Get it from: https://vkhost.github.io/
# Required permissions: video, offline
# Without token, you may have limited access to some videos
VK_ACCESS_TOKEN=your_vk_access_token_here

# VK Group ID to monitor for new live streams
# Get group ID from VK group URL (e.g., for vk.com/groupname, use groupname or group ID)
VK_GROUP=your_vk_group_id_here

# Your Telegram User ID for notifications
# Get it by messaging @userinfobot on Telegram
MY_ID=your_telegram_user_id_here

